<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Zaloguj!", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Nowy użytkownik? <%= link_to "Zarejestruj się!", signup_path %></p>
  </div>
</div>